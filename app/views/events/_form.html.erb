<%= form_for(@event, remote: true) do |f| %>
  <h2>Add new event to calendar</h2>

  <ul id="event_form_errors"></ul>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
